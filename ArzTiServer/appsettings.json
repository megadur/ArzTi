{
  "environment": "Development",
  "jwtIssuerOptions": {
    "issuer": "an-apidemo",
    "audience": "http://localhost:5000/"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.PostgreSQL.Configuration", "Serilog.Sinks.Console", "Serilog.Enrichers.ClientInfo" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error"
      }
    },
    "Enrich": [ "WithMachineName", "WithClientIp", "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "OpiPcConnectionString",
          "tableName": "LogClient",
          "needAutoCreateTable": true,
          "respectCase": true,
          "loggerColumnOptions": {
            "Id": "IdAutoIncrement",
            "TimeStamp": "Timestamp",
            "Message": "Message",
            "Level": "LevelAsText",
            "RenderedMessage": "RenderedMessage",
            "Exception": "Exception",
            "Properties": "Properties"
          }
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] tw {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }

      },
      {
        "Name": "RollingFile",
        "Args": {
          "logDirectory": ".\\Logs",
          "fileSizeLimitBytes": 104857600,
          "pathFormat": "Logs/ArzTiServer.{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "HealthChecks-UI": {
    "HealthChecks": [
      {
        "Name": "ArzTi API Starter",
        "Uri": "http://localhost:5000/health"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeOnSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "PostgreSqlConnectionString": "Username=postgres;Password=postgres;Server=localhost;Port=5432;Database=ArzDB;IntegratedSecurity=true;Pooling=true;", //target_session_attrs=read-write;",
  "ApoDatenConnectionString": "Username=postgres;Password=postgres;Server=localhost;Port=5432;Database=ArzDB;IntegratedSecurity=true;Pooling=true;",
  "ApoVerwaltungConnectionString": "Username=postgres;Password=postgres;Server=localhost;Port=5432;Database=ArzDB;IntegratedSecurity=true;Pooling=true;",
  "OpiPcConnectionString": "Username=dbuser;Password=pass1234;Server=opipc;Port=5432;Database=master;IntegratedSecurity=true;Pooling=true;"

}